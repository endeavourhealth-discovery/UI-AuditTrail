{
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"removeComments": true,
		"sourceMap": true,
		"outDir":"./dist",
		"declaration": true,
		"lib": ["es2015", "dom"]
	},
	"angularCompilerOptions": {
		"genDir": "aot",
		"strictMetadataEmit": true
	},
	"exclude": [
		".idea",
		"aot",
		"node_modules",
		"typings",
		"dist"
	]
}
